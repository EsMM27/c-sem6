@page "{id:int}"
@model MyProj_L00148202.Pages.Admin.Categories.EditModel
@{
}
<form method="post">
    <input hidden asp-for="Category.Id">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Create New Category</h2>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Category.Name"></label>
            <input asp-for="@Model.Category.Name" class="form-control"/>
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-page="Index" class="btn btn-secondary">Back to Index</a>
    </div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}