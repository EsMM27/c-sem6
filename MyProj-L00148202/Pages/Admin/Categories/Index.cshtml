@page
@model MyProj_L00148202.Pages.Admin.Categories.IndexModel
@{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">SCP</h3>
        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary">
                Create New SCP 
            </a>
        </div>
    </div>
</div>



<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>SCP Catagory</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.Categories)
        {
            <tr>
                <td width="50%">@obj.Name</td>
                <td><a asp-page="Edit" asp-route-id="@obj.Id">Edit</a></td>
                <td><a asp-page="Delete" asp-route-id="@obj.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
