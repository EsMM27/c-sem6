@page
@model MyProj_L00148202.Pages.Admin.Categories.DeleteModel
@{
}
<h2 class="text-primary pl-3">Delete Category</h2>

<div class="border p-3 mt-4">
    @if (Model.Category != null)
    {
        <p>Are you sure you want to delete this category?</p>
        <p><strong>@Model.Category.Name</strong></p>

        <form method="post">
            <!-- Hidden field to keep the ID so OnPost knows which to delete -->
            <input type="hidden" asp-for="Category.Id" />

            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="Index" class="btn btn-secondary">Cancel</a>
        </form>
    }
    else
    {
        <p>Category not found or already deleted.</p>
        <a asp-page="Index" class="btn btn-secondary">Back to Index</a>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}