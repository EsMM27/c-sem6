@page "{id:int}"
@model RP1_L00148202.Pages.Admin.Products.EditModel
<h2>Edit Product</h2>

<div class="border p-3 mt-4">
    <div class="row pb-2">
        <div class="col-9">

            <form method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Product.ID" />

                <label asp-for="Product.Name"></label>
                <input asp-for="Product.Name" class="form-control" />

                <label asp-for="Product.Description"></label>
                <textarea asp-for="Product.Description" class="form-control"></textarea>

                <label asp-for="Product.Price"></label>
                <input asp-for="Product.Price" type="number" class="form-control" />

                <label asp-for="Product.CategoryID"></label>
                <select asp-for="Product.CategoryID" asp-items="ViewBag.CategoryID" class="form-control"></select>

                <label>Upload Image</label>
                <input type="file" name="files" class="form-control" />

                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
        <div class="col-3">
            <img src="@Url.Content("~/"+ Model.Product.Image)" alt="Product Image" class="img-fluid" style="max-width: 250px;" />
        </div>
    </div>

</div>


<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
