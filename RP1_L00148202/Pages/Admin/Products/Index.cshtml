@page
@model RP1_L00148202.Pages.Admin.Products.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">Products</h3>
        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary">
                Create new Book
            </a>
        </div>
    </div>
</div>



<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.Products)
        {
            <tr>
                <td width="50%">@obj.Name</td>
                <td width="50%">@obj.CategoryID.</td>
                <td width="50%">@obj.Price</td>
                <td width="50%">@obj.Description</td>
                <td><a asp-page="Edit" asp-route-id="@obj.ID" class="btn btn-primary mx-2">Edit</a></td>
                <td><a asp-page="Delete" asp-route-id="@obj.ID" class="btn btn-danger mx-2">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
